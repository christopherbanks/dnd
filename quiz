#include <stdio.h>
#include <cs50.h>

int main(void)
{
    string name = get_string("What is your name?\n");
    printf("Heyo %s.\n", name);
    int i = get_int("How old are you %s?\n", name); 
        if (i <= 30){printf("What a great age to be playing DnD!\n");}
        if (i >= 29){printf("Never too old for that nerd shit!\n");}
    char answer;
    printf("%s, I am going to ask you a series of questions to determine your DnD character.\nSome you will answer with either a 'y' for yes, 'n' for no, or 's' for sometimes.\nOthers you will choose one out of three options by replying 'a', 'b', or 'c'.\nDo you understand?\n", name);
    scanf(" %c", &answer);
    if (answer == 'y'){ printf("Great. Are you ready for your first question?\n");}
    if (answer == 'n'){ printf("Really? Maybe DnD is not for you.\n");}
    if (answer == 's'){ printf("Very funny %s. Are you ready for your first question?\n", name);}
    scanf(" %c", &answer);
    if (answer == 'y'){printf("question 1\n");}

}
